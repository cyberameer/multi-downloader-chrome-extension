{
  "manifest_version": 3,
  "name": "Instant Multi Downloader Pro",
  "version": "1.0",
  "description": "Ultra-fast parallel file downloader with instant scraping capabilities",
  "permissions": [
    "downloads",
    "storage",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_title": "Open Instant Downloader"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}